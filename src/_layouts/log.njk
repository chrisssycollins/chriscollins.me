---
layout: base.njk
---

<section class="w-full">
    <nav class="rounded bg-gray-100 mb-6 -mt-6">
        <div class="container">
            <a href="/log" class="icons inline-flex items-center text-sm -mx-3 p-2">
                <svg class="w-5" version="1.1"  viewBox="0 0 48 48" xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink">
                    <path d="M30.83 32.67l-9.17-9.17 9.17-9.17 -2.83-2.83 -12 12 12 12Z"></path>
                    <path fill="none" d="M0-.5h48v48h-48Z"></path>
                </svg> Back to log</a>
        </div>
    </nav>

    <div class="container">
        <h1 class="text-2xl md:text-5xl leading-tight my-8 p-name font-semibold">
            <a href="{{ page.url }}" class="no-underline u-url">{{ name }}</a>
        </h1>
    </div>

    <article class="container h-entry mb-8 flex flex-col lg:flex-row-reverse items-start">
        <aside class="w-full lg:w-auto mb-4 sm:py-4 lg:sticky lg:top-4 lg:ml-6 bg-gray-100 rounded p-4 lg:flex-auto order-first lg:order-none">
            <ul class="text-gray-600 dark-mode:text-gray-500 uppercase text-xs font-bold tracking-wider border-b border-gray-100 dark-mode:border-gray-800">
                <li class="flex py-1 justify-between">Date: <time itemprop="datePublished" class="dt-published" datetime="{{ page.date | htmlDateString }}">{{ page.date | readableDate }}</time>
                </li>
                <li class="flex py-1 justify-between">Time taken: <span class="ml-2 text-right">{{ time }}</span></li>
                <li class="flex py-1 justify-between">Ascent: <span class="ml-2 text-right">{{ ascent }}</span></li>
                <li class="flex py-1 justify-between">Munros: <span class="ml-2 text-right">{{ munros }}</span></li>
                <li class="flex py-1 justify-between">Rating: <span class="ml-2 text-right">{{ rating }}</span></li>
            </ul>
        </aside>

        <div class="lg:mr-6 lg:w-2/3 lg:order-none">
            <div class="e-content lg:text-lg  markdown">
                {{ content | safe }}
            </div>

            <div class="e-content lg:text-lg mt-8 border-t">
                {% include "webmentions.njk" %}
            </div>
        </div>
    </article>

    <script type="application/ld+json">
        {
            "@context": "https://schema.org",
            "@type": "BlogPosting",
            "mainEntityOfPage": {
                "@type": "WebPage",
                "@id": "{{ site.url }}{{ page.url | url }}"
            },
            "headline": "{{ name }}",
            "image": "{{ site.url }}{{ page.url | url }}{{ featured_image }}",
            "author": {
                "@type": "Person",
                "name": "Chris Collins"
            },
            "datePublished": "{{ page.date | htmlDateString }}"
        }
    </script>
</section>