---
layout: base.njk
---

<article class="container h-entry mb-8">
    <div class="max-w-xl">
        <header class="mb-4 sm:py-4">
            <h1 class="text-xl md:text-3xl mb-8 leading-tight p-name font-semibold"><a href="{{ page.url }}" class="no-underline u-url">{{ title }}</a></h1>
            <ul class="text-gray-500 uppercase text-xs font-bold tracking-wider border-t border-b border-gray-100 dark-mode:border-gray-800 py-8">
              <li class="flex py-1 justify-between">Date: <time class="dt-published" datetime="{{ page.date | htmlDateString }}">{{ page.date | readableDate }}</time></li>
              <li class="flex py-1 justify-between">Time taken: <span>{{ time }}</span></li>
              <li class="flex py-1 justify-between">Ascent: <span>{{ ascent }}</span></li>
              <li class="flex py-1 justify-between">Munros: <span>{{ munros }}</span></li>
              <li class="flex py-1 justify-between">Rating: <span>{{ rating }}</span></li>
            </ul>
        </header>

        <div class="e-content md:text-lg  markdown">
            {{ content | safe }}
        </div>

        <div class="e-content md:text-lg mt-8 border-t dark-mode:border-gray-700">
            {% include "webmentions.njk" %}
        </div>
    </div>
</article>
