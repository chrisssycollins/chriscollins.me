<header class="mb-8 container">
    <div class="py-6 md:py-8 md:flex items-center justify-between border-b border-gray-200">
        <div class="flex justify-between items-center sm:justify-start">
            <a href="/" class="no-underline w-12 h-12 md:w-16 md:h-16 font-bold overflow-hidden justify-center text-xl flex items-center bg-orange-500 hover:bg-gray-500 shadow-lg text-white no-underline rounded-full">
                <img src="/static/chriscollins.png" alt="">
                <span class="sr-only">Chris Collins</span>
            </a>
            <button class="flex items-center rounded-full sm:hidden bg-white shadow-sm px-4 py-3" data-id="nav-toggle"><svg class="w-6 h-6 mr-2 fill-current text-gray-900" version="1.1" viewBox="0 0 18 18" xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink"><path d="M0 0h18v18h-18Z" fill="none"></path><path d="M2 13.5h14v-1.5h-14Zm0-4h14v-1.5h-14Zm0-5.5v1.5h14v-1.5Z"></path></svg> <span>Menu</span></button>
        </div>
        <nav class="hidden sm:block navbar mt-4 md:mt-0 -ml-2 md:ml-4 lg:ml-8" data-id="nav-items">
            <ul class="sm:flex">
                {% set activePage = page.url | url %}
                <li>
                    <a class="block no-underline mr-1 md:mr-1 py-3 px-4 rounded-full {% if activePage === '/' %} bg-white shadow-sm text-orange-500 {% endif %}" href="/">Home</a>
                </li>
                <li>
                    <a class="block no-underline mr-1 md:mr-1 py-3 px-4 rounded-full {% if activePage === '/about/' %} bg-white shadow-sm text-orange-500 {% endif %}" href="/about/">About</a>
                </li>
                <li>
                    <a class="block no-underline mr-1 md:mr-1 py-3 px-4 rounded-full {% if activePage === '/uses/' %} bg-white shadow-sm text-orange-500 {% endif %}" href="/uses/">Stuff I Use</a>
                </li>
                <li>
                    <a class="block no-underline mr-1 md:mr-1 py-3 px-4 rounded-full {% if '/blog/' in activePage %} bg-white shadow-sm text-orange-500 {% endif %}" href="/blog/">Blog</a>
                </li>
                <li>
                    <a class="block no-underline mr-1 md:mr-1 py-3 px-4 rounded-full {% if '/contact/' in activePage %} bg-white shadow-sm text-orange-500 {% endif %}" href="/contact/">Contact</a>
                </li>
            </ul>
        </nav>
    </div>
</header>